    <!--
    <sql id="brandColumns">
            a.id,
            a.code,
            a.name,
            a.remarks
    </sql>
    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO md_brand(
			code,
			name,
			create_by,
			create_date,
			remarks
		) VALUES (
			#{code},
			#{name},
