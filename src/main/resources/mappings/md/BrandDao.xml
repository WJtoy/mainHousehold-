        id
        FROM
        md_brand
        WHERE
        name = #{name}
        <if test="id != null">
            AND   id != #{id}
        </if>
        AND   del_flag = 0
        LIMIT 1
    </select>
    <select id="getIdByCode" resultType="java.lang.Long">
        SELECT
        id
        FROM
        md_brand
        WHERE
        code = #{code}
        <if test="id != null">
            AND   id != #{id}
        </if>
        AND   del_flag = 0
        LIMIT 1
    </select>
