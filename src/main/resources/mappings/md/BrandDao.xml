    <update id="update">
        UPDATE
            md_brand
        SET
            code = #{code},
            name = #{name},
            remarks = #{remarks},
            update_by = #{updateBy.id},
            update_date = #{updateDate}
        WHERE
            id = #{id}
    </update>

    <delete id="delete">
        UPDATE
            md_brand
        SET
            del_flag = 1,
            update_by = #{updateBy.id},
            update_date = #{updateDate}
        WHERE
            id = #{id}
    </delete>

    <select id="get" resultType="Brand">
        SELECT
                <include refid="brandColumns"/>
        FROM
                md_brand a
        WHERE
                a.id = #{id}
          AND   a.del_flag = 0
    </select>


    <select id="findAllList" resultType="Brand">
        SELECT
                <include refid="brandColumns"/>
        FROM
                md_brand a
        WHERE
                a.del_flag = 0
        ORDER BY
                a.code
        LIMIT 2000
    </select>

    <select id="findList" resultType="Brand">
        SELECT
                <include refid="brandColumns"/>
        FROM
                md_brand a
        <where>
            <if test="code != null and code !=''">
              AND   a.code LIKE CONCAT('%', #{code}, '%')
