<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wolfking.jeesite.modules.sys.dao.RoleDao">
    
    <resultMap id="roleResult" type="com.wolfking.jeesite.modules.sys.entity.Role">
		<id property="id" column="id" />
		<result property="name" column="name" />
		<result property="enname" column="enname" />
		<result property="roleType" column="roleType" />
		<result property="dataScope" column="dataScope" />
		<result property="remarks" column="remarks" />
		<result property="useable" column="useable" />
		<association property="office" column="office" javaType="com.wolfking.jeesite.modules.sys.entity.Office">
			<result property="id" column="office.id"/>
			<result property="name" column="office.name"/>
			<result property="code" column="office.code"/>
		</association>
		<collection property="menuList" ofType="com.wolfking.jeesite.modules.sys.entity.Menu">
			<id property="id" column="menuList.id" />
		</collection>
		<collection property="officeList" ofType="com.wolfking.jeesite.modules.sys.entity.Office">
			<id property="id" column="officeList.id" />
		</collection>
	</resultMap>

	<!-- mark on 2020-12-19
    <sql id="roleColumns">
    	a.id,
    	a.office_id AS "office.id",
    	a.name,
    	a.enname,
    	a.role_type AS roleType,
