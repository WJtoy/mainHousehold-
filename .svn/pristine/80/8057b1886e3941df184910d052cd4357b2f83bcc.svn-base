<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.wolfking.jeesite.modules.md.dao.SystemNoticeDao">
    <sql id="ServicePointNoticeColumns">
            a.id,
            a.title,
            a.content,
            a.subtitle,
            a.create_by,
            a.notice_type,
            a.create_date,
            a.update_by,
            a.update_date
    </sql>

    <select id="findList" resultType="SystemNotice">
        SELECT msn.title,msn.content,msn.notice_type,msn.create_date,msn.subtitle
        FROM sys_notice msn
        WHERE create_date >= #{startDate}
        AND del_flag = 0
        AND <![CDATA[ create_date <= #{endDate}]]>
        <if test="title !=null and title!=''">
            AND  msn.title like CONCAT('%',#{title},'%')
        </if>
        <if test="noticeType !=null and noticeType>0">
            AND msn.notice_type IN (#{noticeType},10)
        </if>
        order by create_date DESC
    </select>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO sys_notice(
			title,
			content,
			notice_type,
			subtitle,
			create_by,
			create_date,
			update_by,
			update_date
		) VALUES (
			#{title},
			#{content},
			#{noticeType},
			#{subtitle},
			#{createBy.id},
			#{createDate},
			#{updateBy.id},
            #{updateDate}
		)
    </insert>

    <update id="update">
        UPDATE
            sys_notice
        SET
            title = #{title},
            content = #{content},
            subtitle = #{subtitle},
            update_by = #{updateBy.id},
            update_date = #{updateDate}
        WHERE
            id = #{id}
    </update>

    <delete id="delete">
        UPDATE
            sys_notice
        SET
            del_flag = 1,
            update_by = #{updateBy.id},
            update_date = #{updateDate}
        WHERE
            id = #{id}
    </delete>

    <select id="get" resultType="SystemNotice">
        SELECT
                <include refid="ServicePointNoticeColumns"/>
        FROM
                sys_notice a
        WHERE
                a.id = #{id}
          AND   a.del_flag = 0
    </select>

</mapper>