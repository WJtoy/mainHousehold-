/*
    基于Amazeui的仿pc端微信界面
    http://www.jq22.com/yanshi19578
*/
.talk_window {
    width: 550px;
    height: 100%;
    float: left;
    background: #f5f5f5 !important;
}

.windows_top {
    padding-top: 10px;
    height: 45px;
    border-bottom: 1px solid #e7e7e7
}

.windows_top_box>span {
    font-size: 18px;
    color: #333;
    line-height: 52px;
    padding-left: 30px;
    display: inline-block
}

.windows_top_box {
    width: 100%;
    height: 100%;
    position: relative
}
.windows_body {
    /*height: 580px;*/
    /*height:calc(100% - 62px);*/
    height: 100%;
    width: 100%;
    background: #f5f5f5 !important;
}
.windows_body p {
    padding: 5px 10px;
    margin-top: 10px;
    border-radius: 4px
}

.office_text {
    width: 100%;
    height: 580px;
    /*height: calc(100% - 62px);*/
    overflow-y: auto;
    overflow-x: hidden;
    position: relative;
    display: inline-block
}

.content {
    width: 100%;
    padding: 10px 10px;
    margin: 10px 0px !important;
}

.user img {
    float: right;
    width: 34px;
    height: 34px;
    border-radius: 2px
}

.user span {
    float: right;
    background: #9eea6a
}

.user {
    margin-top: 10px;
    padding-right: 30px;
    display: block;
    clear: both;
    overflow: hidden;
    float: right;
    margin-bottom: 5px
}

.user span {
    background: #9eea6a;
    padding: 7px;
    border-radius: 4px;
    margin: 0 10px;
    max-width: 80%;
    border: 1px solid #9eea6a;
    position: relative
}

.user span:before {
    content: " ";
    position: absolute;
    top: 9px;
    right: 100%;
    border: 6px solid transparent;
    border-left-color: #9eea6a;
    right: inherit;
    left: 100%
}

.robot img {
    float: right;
    width: 34px;
    height: 34px;
    border-radius: 2px
}

.robot span {
    float: right;
    background: #9eea6a
}

.robot {
    margin-top: 10px;
    padding-left: 10px;
    width: 80%;
    display: block;
    clear: both;
    overflow: hidden;
    float: left;
    margin-bottom: 5px
}

.robot img {
    float: left
}

.robot span {
    background: #fff;
    padding: 7px;
    border-radius: 4px;
    float: left;
    margin: 0 10px;
    max-width: 80%;
    border: 1px solid #ededed;
    position: relative
}

.robot span:before {
    content: "";
    position: absolute;
    top: 9px;
    right: 100%;
    border: 6px solid transparent;
    border-right-color: #fff;
    right: inherit;
    right: 100%
}