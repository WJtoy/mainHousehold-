<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.wolfking.jeesite.modules.sd.dao.OrderLocationDao">

    <sql id="locationColumns">
        a.order_id,
        a.quarter,
        a.area_id,
        a.longitude,
        a.latitude,
        a.distance
    </sql>

    <insert id="insert">
        INSERT INTO sd_order_location(
            order_id,
            quarter,
            area_id,
            longitude,
            latitude
        ) VALUES (
            #{orderId},
            #{quarter},
            #{area.id},
            #{longitude},
            #{latitude}
        )
    </insert>

    <update id="updateByMap" parameterType="java.util.HashMap">
        update
        sd_order_location
        <set>
            <if test="longitude != null and longitude > 0" >
                longitude = #{longitude},
            </if>
            <if test="latitude != null and latitude > 0" >
                latitude = #{latitude},
            </if>
            <if test="areaId != null and areaId > 0" >
                area_id = #{area.id},
            </if>
            <if test="distance != null" >
                distance = #{distance},
            </if>
        </set>
        WHERE
            quarter = #{quarter}
            and order_id = #{orderId}
    </update>

    <update id="update">
        UPDATE
          sd_order_location
        SET
          longitude = #{longitude},
          latitude = #{latitude},
          area_id = #{area.id},
        WHERE
            quarter = #{quarter}
            and order_id = #{orderId}
    </update>

</mapper>