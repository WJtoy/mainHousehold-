<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wolfking.jeesite.modules.sys.dao.LogDao">
    
	<select id="findList" resultType="com.wolfking.jeesite.modules.sys.entity.Log">
		SELECT 
			a.*,
			u.id AS "createBy.id",
			u.name AS "createBy.name",
			c.name AS "createBy.company.name",
			o.name AS "createBy.office.name"
		FROM sys_log a
		JOIN sys_user u ON u.id = a.create_by
		JOIN sys_office c ON c.id = u.company_id
		JOIN sys_office o ON o.id = u.office_id
		WHERE a.create_date BETWEEN #{beginDate} AND #{endDate}
		<if test="title != null and title != ''.toString()">
			AND a.title LIKE 
					<if test="dbName == 'oracle'.toString()">'%'||#{title}||'%'</if>
					<if test="dbName == 'mssql'.toString()">'%'+#{title}+'%'</if>
					<if test="dbName == 'mysql'.toString()">CONCAT('%', #{title}, '%')</if>
		</if>
		<if test="createBy != null and createBy.id != null and createBy.id != ''.toString()">
			AND a.create_by = #{createBy.id}
		</if>
		<if test="requestUri != null and requestUri != ''.toString()">
			AND a.request_uri LIKE 
					<if test="dbName == 'oracle'.toString()">'%'||#{requestUri}||'%'</if>
					<if test="dbName == 'mssql'.toString()">'%'+#{requestUri}+'%'</if>
					<if test="dbName == 'mysql'.toString()">CONCAT('%', #{requestUri}, '%')</if>
		</if>
		<if test="exception != null and exception != ''.toString()">
			AND a.type = #{TYPE_EXCEPTION}
		</if>
		ORDER BY a.create_date DESC
	</select>
	
	<insert id="insert">
		INSERT INTO sys_log(
			type,
			title,
			create_by, 
			create_date, 
			remote_addr, 
			user_agent, 
			request_uri, 
			method, 
			params, 
			exception
		) VALUES (
			#{type},
			#{title}, 
			#{createBy.id}, 
			#{createDate}, 
			#{remoteAddr}, 
			#{userAgent}, 
			#{requestUri}, 
			#{method}, 
			#{params}, 
			#{exception}
		)
	</insert>
	
</mapper>