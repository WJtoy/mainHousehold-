package com.wolfking.jeesite.ms.tmall.rpt.service;

import com.kkl.kklplus.entity.b2b.order.B2BWorkcardQtyDaily;
import com.wolfking.jeesite.common.utils.DateUtils;
import com.kkl.kklplus.utils.StringUtils;
import com.wolfking.jeesite.ms.tmall.rpt.dao.B2BOrderDailyQtyDao;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;


import java.util.Date;
import java.util.List;

@Service
public class B2BOrderDailyQtyService {

    @Autowired
    private B2BOrderDailyQtyDao b2BOrderDailyQtyDao;

    public List<B2BWorkcardQtyDaily> getB2BWorkcardQtyDaily(int selectedYear, int selectedMonth,Integer dataSource,Integer statisticType){
        Date queryDate = DateUtils.getDate(selectedYear, selectedMonth, 1);
        String quarter = String.format("%04d%d", selectedYear, DateUtils.getSeason(queryDate));
        Integer yearMonth = StringUtils.toInteger(DateUtils.formatDate(queryDate, "yyyyMM"));

        return b2BOrderDailyQtyDao.getB2BOrderDailyQty(yearMonth, dataSource, statisticType);

    }

}
