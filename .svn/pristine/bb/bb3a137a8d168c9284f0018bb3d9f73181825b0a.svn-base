<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wolfking.jeesite.modules.sys.dao.UserAttributesDao">

    <select id="getUserAttributesList" resultType="com.wolfking.jeesite.modules.sys.entity.UserAttributes">
        select
        user_id,
        user_attributes
        from sys_user_attributes
        where
           user_id = #{userId}
           and type = #{type}
        limit 500
    </select>

    <insert id="saveUserAttributes">
        INSERT INTO sys_user_attributes(
        user_id,
        user_attributes,
        type
        ) VALUES (
        #{userId},
        #{userAttributes},
        #{type}
        )
    </insert>

    <delete id="deleteUserAttributes">
        DELETE FROM sys_user_attributes
        where user_id = #{userId} AND type = #{type}
    </delete>

</mapper>